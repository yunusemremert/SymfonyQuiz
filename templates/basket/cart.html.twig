{% extends 'base.html.twig' %}

{% block title %}All Product List!{% endblock %}

{% block body %}
    <h1>Sale</h1>
    <p>Lorem ipsum..</p>
    {% for message in app.flashes('alert') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <form action="{{ path('basket.basket_buy') }}" method="post">
        <div class="form-group">
            <label for="payment_method">Payment Method</label>
            <select class="form-control" id="payment_method" name="payment_method">
                <option value="Kapıda Ödeme">Kapıda Ödeme</option>
            </select>
        </div>
        <div class="form-group">
            <label for="address">Adress</label>
            <textarea class="form-control" id="address" name="address" rows="3"></textarea>
        </div>
        <input type="hidden" name="_token" value="{{ csrf_token('post') }}">
        <button class="btn btn-success">{{ button_label|default('Buy') }}</button>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags("basket") }}
{% endblock %}
